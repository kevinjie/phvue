{
    "name": "phvue",

    "require": {
        "php": ">=7.1",
        "ext-phalcon": ">=2.0.0",
        "vlucas/phpdotenv": "^2.4",
        "guzzlehttp/guzzle": "^6.3",
        "ramsey/uuid": "3.7.3"
    },
    "repositories": [{
        "type": "composer",
        "url": "https://packagist.phpcomposer.com"
    }],
    "autoload": {
        "psr-4": {
            "Phvue\\Demo\\": "apps/demo/",
            "Phvue\\Common\\": "apps/common"
        },
        "files": [
            "apps/common/Helpers/functions.php"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.1"
    }
}